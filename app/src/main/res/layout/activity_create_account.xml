<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateAccount">


    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/edittext_arrondi"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="true"
        android:fontFamily="@font/junge"
        android:hint="PrÃ©nom"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_arrondi"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="true"
        android:fontFamily="@font/junge"
        android:hint="Nom"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_first_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_first_name"
        app:layout_constraintTop_toBottomOf="@+id/et_first_name" />

    <TextView
        android:id="@+id/tv_dateNaissance"
        android:layout_width="337dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_arrondi"
        android:ems="10"
        android:fontFamily="@font/junge"
        android:hint="Date de Naissance"
        android:padding="15dp"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_last_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_last_name"
        app:layout_constraintTop_toBottomOf="@+id/et_last_name" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_arrondi"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="true"
        android:fontFamily="@font/junge"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_dateNaissance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_dateNaissance"
        app:layout_constraintTop_toBottomOf="@+id/tv_dateNaissance" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/edittext_arrondi"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="true"
        android:fontFamily="@font/junge"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#fff"
        android:textCursorDrawable="@null"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/et_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_email"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/junge"
        android:text="Creer le compte"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>