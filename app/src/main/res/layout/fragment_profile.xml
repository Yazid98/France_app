<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/lastNameUser"
            android:layout_width="229dp"
            android:layout_height="41dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edittext_arrondi"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="@font/junge"
            android:hint="PrÃ©nom"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/firstNameUser"
            android:layout_width="229dp"
            android:layout_height="41dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edittext_arrondi"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="@font/junge"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/lastNameUser"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/lastNameUser"
            app:layout_constraintTop_toBottomOf="@+id/lastNameUser"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/birthdayDateUser"
            android:layout_width="233dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/edittext_arrondi"
            android:ems="10"
            android:fontFamily="@font/junge"
            android:hint="Date de Naissance"
            android:padding="15dp"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/firstNameUser"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/firstNameUser"
            app:layout_constraintTop_toBottomOf="@+id/firstNameUser" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Profil du User"
            android:textSize="19sp"
            android:fontFamily="@font/junge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_deconnexion"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_bleu"
            android:fontFamily="@font/junge"
            android:text="Deconnexion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>